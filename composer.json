{
	"name": "pedalcms/cassette-cmf",
	"description": "WP Content Modeling Framework",
	"type": "library",
	"require-dev": {
		"phpunit/phpunit": "9.6",
		"wp-phpunit/wp-phpunit": "^6.8",
		"squizlabs/php_codesniffer": "^3.13.0",
		"wp-coding-standards/wpcs": "^3.2",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.1",
		"phpstan/phpstan": "^2.1",
		"phpstan/extension-installer": "^1.4",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"php-stubs/wordpress-stubs": "^6.7",
		"yoast/phpunit-polyfills": "3.0",
		"wp-cli/wp-cli-bundle": "^2.12"
	},
	"require": {
		"php": ">=8.2"
	},
	"license": "GPL-2.0-or-later",
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"autoload-dev": {
		"classmap": [
			"tests/"
		]
	},
	"authors": [
		{
			"name": "PedalCMS"
		}
	],
	"minimum-stability": "beta",
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		}
	},
	"scripts": {
		"test": "phpunit",
		"test-install": "bash bin/install-wp-tests.sh wordpress_test root root localhost latest",
		"cs": "phpcs src/",
		"cs:fix": "phpcbf src/",
		"cs:examples": "phpcs examples/",
		"cs:fix:examples": "phpcbf examples/",
		"cs:tests": "phpcs tests/",
		"cs:fix:tests": "phpcbf tests/",
		"cs:all": [
			"@cs",
			"@cs:examples",
			"@cs:tests"
		],
		"cs:fix:all": [
			"@cs:fix",
			"@cs:fix:examples",
			"@cs:fix:tests"
		],
		"analyse": "phpstan analyse --memory-limit=2048M",
		"ci": [
			"@cs:all",
			"@analyse",
			"@test"
		]
	}
}
